@model RASPortal.Models.RegisterViewModel

<style>
    body {
        background-color: #f8f9fa;
    }

    .register-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .register-box {
        width: 100%;
        max-width: 800px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .column {
        flex: 1;
        padding: 0 10px;
    }
</style>

<div class="register-container">
    <div class="register-box">
        <div class="img-container mb-3 my-2 d-flex justify-content-center">
            <img class="img-fluid" alt="Portal Logo" style="width: 200px; height: 64px;" src="~/Source/Portal.png"/>
        </div>
        <h2 class="text-center mb-4">Kayıt Ol</h2>
        <form method="post" asp-action="Register">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="d-flex">
                <div class="column">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" type="text" class="form-control" placeholder="Kullanıcı adınızı girin" required>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi girin" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi tekrar girin" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="Adınızı girin" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Soyadınızı girin" required>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="column">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresinizi girin" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Telefon numaranızı girin">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" type="date" class="form-control">
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<GenderType>()"></select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            </div>
            <div class="mt-3 text-center">
                <a asp-action="Login">Zaten bir hesabınız var mı? Giriş yapın!</a>
            </div>
        </form>
    </div>
</div>